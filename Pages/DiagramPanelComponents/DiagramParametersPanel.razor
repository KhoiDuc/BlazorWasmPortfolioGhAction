@using BlazorWasmPortfolioGhAction.ViewModels;

<EditForm EditContext="_editContext">
    <DataAnnotationsValidator />
    <DiagramPanelParameterInput Label="@DiagramParametersViewModel.WidthCaption"
                                InputHtmlType="number"
                                Value="@_parametersViewModel.Width"
                                OnValueChanged="@OnWidthChanged"
                                ValudationMessgeFor="@(() => _parametersViewModel.Width)" />
    <DiagramPanelParameterInput Label="@DiagramParametersViewModel.HeightCaption"
                                InputHtmlType="number"
                                Value="@_parametersViewModel.Height"
                                OnValueChanged="@OnHeightChanged"
                                ValudationMessgeFor="@(() => _parametersViewModel.Height)" />
    <DiagramPanelParameterCheckbox Label="Show grid"
                                   Value="@_parametersViewModel.ShowGrid"
                                   OnValueChanged="@OnShowGridChanged" />
    <DiagramPanelParameterInput Label="@DiagramParametersViewModel.GridStepCaption"
                                InputHtmlType="number"
                                Value="@_parametersViewModel.GridStep"
                                OnValueChanged="@OnGridStepChanged"
                                ValudationMessgeFor="@(() => _parametersViewModel.GridStep)" />
</EditForm>