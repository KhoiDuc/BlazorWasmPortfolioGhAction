@code {
    private IJSObjectReference? carouselInstance;
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            carouselInstance = await JS.InvokeAsync<IJSObjectReference>("carouselFunctions.initializeCarousel");
            await JS.InvokeVoidAsync("initializeScrollProgress");
            await JS.InvokeVoidAsync("initializeStarfield");
        }
    }

    private async Task ChangeSlide(int direction)
    {
        if (carouselInstance != null)
        {
            // Call changeSlide on the carousel instance
            await carouselInstance.InvokeVoidAsync("changeSlide", direction);
        }
    }
    public async ValueTask DisposeAsync()
    {
        if (carouselInstance != null)
            await carouselInstance.DisposeAsync();
    }
}