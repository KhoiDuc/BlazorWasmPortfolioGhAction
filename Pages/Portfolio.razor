@code {
    private IJSObjectReference? carouselInstance;
    private string currentLanguage = "en";
    
    [Parameter]
    public string? Lang { get; set; }

    protected override void OnParametersSet()
    {
        if (string.IsNullOrEmpty(Lang))
        {
            NavigationManager.NavigateTo("/en/resume");
        }
        else if (Lang != "en" && Lang != "vn")
        {
            NavigationManager.NavigateTo("/en/resume");
        }
        else
        {
            currentLanguage = Lang;
        }
    }

    private void ToggleLanguage()
    {
        var newLang = currentLanguage == "en" ? "vn" : "en";
        NavigationManager.NavigateTo($"/{newLang}/resume");
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            carouselInstance = await JS.InvokeAsync<IJSObjectReference>("carouselFunctions.initializeCarousel");
            await JS.InvokeVoidAsync("initializeScrollProgress");
            await JS.InvokeVoidAsync("initializeStarfield");
        }
    }

    private async Task ChangeSlide(int direction)
    {
        if (carouselInstance != null)
        {
            // Call changeSlide on the carousel instance
            await carouselInstance.InvokeVoidAsync("changeSlide", direction);
        }
    }
    public async ValueTask DisposeAsync()
    {
        if (carouselInstance != null)
            await carouselInstance.DisposeAsync();
    }
}